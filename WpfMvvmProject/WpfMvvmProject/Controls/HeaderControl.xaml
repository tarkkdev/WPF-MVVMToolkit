<UserControl x:Class="WpfMvvmProject.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMvvmProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource HeaderBackgroundBrush}">
        <StackPanel Orientation="Horizontal"                         
                        HorizontalAlignment="Center">
            <Image Source="../Images/logo-nba-256.png" Width="100" Margin="5" />
            <TextBlock Text="NBA Player Stats"
                           FontSize="30"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource HeaderForegroundBrush}"/>
            <TextBlock Text="Version 1.0"
                           FontSize="12"                            
                           VerticalAlignment="Bottom"
                           Foreground="#333333"
                           Margin="10 0 5 22"/>
        </StackPanel>
    </Grid>
</UserControl>
